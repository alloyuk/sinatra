<body class="bird">

  <%- include('menu.html') %>


<div class="container mt-4">
  <form action="/save" method="post">
    <div class="form-group">
      <label>제목</label>
      <input type="text" name="title" class="form-control">
    </div>
    <p></p>
    <div class="form-group">
      <label>내용</label>
      <textarea name="content" rows="10" class="form-control"></textarea>
    </div>
    <p></p>
    <div class="form-group">
      <label>작성일</label>
      <input type="date" name="someDate" class="form-control">
    </div>
    <p></p>
    <button type="submit" class="btn btn-warning" style="float: right;">저장</button>
  </form>
</div>

<div class="container mt-3">
  <form action="/photo" method="POST" enctype="multipart/form-data">
    <input type="file" name="picture" accept="img/*" class="btn btn-outline-primary"></input>
    <button type="submit" class="btn btn-outline-primary">첨부</button>
  </form>
</div>


</body>
